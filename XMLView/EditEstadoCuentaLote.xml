<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="190">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="cliente" display="left" order="90" numcolumns="6" title="Cliente">
                <widget type="autocomplete" fieldname="cliente" readonly="true">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="codlote" display="left" order="100" numcolumns="6">
                <widget type="text" fieldname="codlote" readonly="true"/>
            </column>
            <column name="enganche" display="left" order="100" numcolumns="4">
                <widget type="money" fieldname="enganche" readonly="true"/>
            </column>
            <column name="descuento" display="left" order="105" numcolumns="4">
                <widget type="money" fieldname="descuento" readonly="true"/>
            </column>
            <column name="costototal" display="left" order="145" numcolumns="4" title="Costo Total">
                <widget type="money" fieldname="costototal" readonly="true" decimal="2"/>
            </column>
        </group>
    </columns>
</view>