<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" display="none" order="130">
            <widget type="text" fieldname="id" readonly="true"/>
        </column>
        <column name="cliente" order="90" numcolumns="3">
            <widget type="autocomplete" fieldname="cliente" required="true">
                <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="codlote" display="left" order="105" numcolumns="3">
            <widget type="autocomplete" fieldname="codlote" required="true">
                <values source="lotes" fieldcode="id" fieldtitle="codlote"/>
            </widget>
        </column>
        <column name="colonia" display="left" order="110">
            <widget type="number" fieldname="colonia" max="0" min="0" step="0"/>
        </column>
        <column name="fecha" display="left" order="120">
            <widget type="date" fieldname="fecha"/>
        </column>
        <column name="saldo" display="left" order="160">
            <widget type="number" fieldname="saldo" max="0" min="0" step="0"/>
        </column>
        <column name="total" display="left" order="150">
            <widget type="number" fieldname="total" max="0" min="0" step="0"/>
        </column>
    </columns>
</view>